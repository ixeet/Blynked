<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp" >
            <CheckBox
                android:id="@+id/chkEnable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
                android:button="@drawable/checkbox_selector"
                android:layout_centerInParent="true"
                android:text=""/>
            <com.example.admin.blynked.RoundedImageView
                android:id="@+id/ii"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/proff"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/tvNameMain"
                android:textColor="#ff11a3f1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="20dp"
               android:layout_toRightOf="@+id/ii"
               />

            <TextView
                android:id="@+id/tvNumberMain"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNameMain"
                android:paddingLeft="20dp"
                android:layout_toRightOf="@+id/ii"
                 />
            <Button
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="send"
                android:layout_alignParentRight="true"
                android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
